{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier", "@sentry/typescript/tslint"],
  "defaultSeverity": "warning",
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "interface-name": {
      "severity": "off"
    },
    "object-literal-sort-keys": {
      "severity": "off"
    },
    "ordered-imports": {
      "severity": "off"
    },
    "comment-format": {
      "severity": "off"
    },
    "jsx-boolean-value": {
      "severity": "off"
    },
    "no-any": {
      "severity": "warning"
    },
    "jsx-no-lambda": {
      "severity": "off"
    },
    "no-non-null-assertion": {
      "severity": "off"
    },
    "member-access": {
      "severity": "off"
    }
  }
}
